<p id="notice"><%= notice %></p>

<h1>The Showroom</h1>

<%= link_to 'New Car', new_car_path, class: "btn btn-primary" %>

<%= link_to 'Home', static_pages_home_path, class: 'btn btn-primary' %>


<p></p>


<table class="table table-striped table-responsive table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope='col'>Year</th>
      <th scope='col'>Make</th>
      <th scope='col'>Model</th>
      <th scope='col'>Option</th>
      <th scope='col'>Scale</th>
      <th scope='col'>Image url</th>
      <th scope='col'colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.year %></td>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.option %></td>
        <td><%= car.scale %></td>
        <td><%= image_tag(car.image_url, class: 'list_image img-responsive') %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


